<%
  title = "rails web apps using the #{@css_processor.name.downcase} css preprocessor"
  description = "A categorized list of Ruby on Rails web apps using the #{@css_processor.name} CSS preprocessor."

  set_meta_tags(
    title: title,
    description: description,
    canonical: css_processor_tech_stack_url(@css_processor.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? css_processor_tech_stack_url(@css_processor.slug, page: @current_page - 1) : nil,
    next: @next_page ? css_processor_tech_stack_url(@css_processor.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", css_processor_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", css_processor_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>

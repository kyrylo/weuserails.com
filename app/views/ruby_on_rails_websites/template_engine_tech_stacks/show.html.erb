<%
  title = "rails web apps using the #{@template_engine.name} template engine"
  description = "A categorized list of Ruby on Rails web apps using the #{@template_engine.name} template engine."

  set_meta_tags(
    title: title,
    description: description,
    canonical: template_engine_tech_stack_url(@template_engine.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? template_engine_tech_stack_url(@template_engine.slug, page: @current_page - 1) : nil,
    next: @next_page ? template_engine_tech_stack_url(@template_engine.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", template_engine_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", template_engine_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>

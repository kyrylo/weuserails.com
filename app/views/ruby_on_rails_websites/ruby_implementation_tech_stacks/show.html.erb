<%
  title = "rails web apps using the #{@ruby_implementation.name.downcase} ruby implementation"
  description = "A categorized list of Ruby on Rails web apps using the #{@ruby_implementation.name} Ruby implementation."

  set_meta_tags(
    title: title,
    description: description,
    canonical: ruby_implementation_tech_stack_url(@ruby_implementation.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? ruby_implementation_tech_stack_url(@ruby_implementation.slug, page: @current_page - 1) : nil,
    next: @next_page ? ruby_implementation_tech_stack_url(@ruby_implementation.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", ruby_implementation_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", ruby_implementation_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>

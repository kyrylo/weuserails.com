<%
  title = "rails web apps using the #{@cache_store_implementation.name.downcase} cache store implementation"
  description = "A categorized list of Ruby on Rails web apps using the #{@cache_store_implementation.name} cache store implementation."

  set_meta_tags(
    title: title,
    description: description,
    canonical: cache_store_implementation_tech_stack_url(@cache_store_implementation.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? cache_store_implementation_tech_stack_url(@cache_store_implementation.slug, page: @current_page - 1) : nil,
    next: @next_page ? cache_store_implementation_tech_stack_url(@cache_store_implementation.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", cache_store_implementation_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", cache_store_implementation_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>

<%
  title = "rails web apps using the #{@js_bundler.name.downcase} javascript bundler"
  description = "A categorized list of Ruby on Rails web apps using the #{@js_bundler.name} JavaScript bundler."

  set_meta_tags(
    title: title,
    description: description,
    canonical: js_bundler_tech_stack_url(@js_bundler.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? js_bundler_tech_stack_url(@js_bundler.slug, page: @current_page - 1) : nil,
    next: @next_page ? js_bundler_tech_stack_url(@js_bundler.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", js_bundler_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", js_bundler_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>

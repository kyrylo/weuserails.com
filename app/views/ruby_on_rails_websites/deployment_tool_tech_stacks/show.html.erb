<%
  title = "rails web apps using the #{@deployment_tool.name.downcase} deployment tool"
  description = "A categorized list of Ruby on Rails web apps using the #{@deployment_tool.name} deployment tool."

  set_meta_tags(
    title: title,
    description: description,
    canonical: deployment_tool_tech_stack_url(@deployment_tool.slug),
    og: {
      title: title,
      description: description,
    },
    twitter: {
      title: title,
      description: description,
    },
    prev: @prev_page ? deployment_tool_tech_stack_url(@deployment_tool.slug, page: @current_page - 1) : nil,
    next: @next_page ? deployment_tool_tech_stack_url(@deployment_tool.slug, page: @current_page + 1) : nil
  )
%>

<article class="article">
  <%= render "shared/sites_by_technology", sites: @sites %>

  <div class="mt-2 pagination">
    <% if @prev_page %>
      <%= link_to "◂ prev", deployment_tool_tech_stack_path(page: @current_page - 1), class: "no-visited" %>
    <% end %>
    <% if @next_page %>
      <%= link_to "next ▸", deployment_tool_tech_stack_path(page: @current_page + 1), class: "no-visited" %>
    <% end %>
  </div>
</article>
